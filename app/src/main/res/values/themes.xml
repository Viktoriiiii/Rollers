<resources>
    <style name="Theme.Rollers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/for_button</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:fontFamily">@font/lineyka</item>
        <item name="android:textColor">@color/for_text</item>
        <item name="android:textSize">16sp</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>

        <item name="android:windowBackground">@color/main_background</item>

    </style>
    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/rounded_corners_popup_menu</item>
    </style>
    <style name="SwitchStatus">
        <item name="colorControlActivated">@color/for_button</item>
    </style>
    <style name="SwitchGender">
        <item name="colorControlActivated">@color/for_button</item>
        <item name="colorSwitchThumbNormal">@color/for_toolbar</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AllButtons" parent="Theme.Rollers">
        <item name="android:padding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="ButtonAccent" parent="AllButtons">
        <item name="android:backgroundTint">@color/for_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonNoAccent" parent="AllButtons">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/for_button</item>
        <item name="rippleColor">@color/for_popup_menu</item>
    </style>
    
</resources>
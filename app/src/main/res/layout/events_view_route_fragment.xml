<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/for_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/for_toolbar"
            android:src="@drawable/ic_back2_foreground"
            android:foreground="?android:attr/selectableItemBackground"
            />
        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Просмотр маршрута"
            android:textColor="@color/for_icon"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </com.yandex.mapkit.mapview.MapView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewDecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                app:cardCornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/for_button"
                >
                <ImageView
                    android:id="@+id/searchMyLocation"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/ic_my_location_foreground" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>


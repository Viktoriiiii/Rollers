<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.EventAdding"
    android:background="@color/main_background"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/for_toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_back_foreground"
            android:foreground="?android:attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/imageButtonDeleteEvent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_delete_foreground"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                />
            <EditText
                android:id="@+id/etEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Прогулка на роликах"
                android:layout_toEndOf="@+id/tvEventName"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventName"
                />
            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Дата"
                android:inputType="datetime"
                android:layout_below="@+id/etEventName"
                android:layout_toEndOf="@+id/tvEventDate"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Организатор: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventDate"
                />
            <EditText
                android:id="@+id/etEventOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Иван Иванов"
                android:layout_below="@+id/etEventDate"
                android:layout_toEndOf="@+id/tvEventOrganizer"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventOrganizer"
                />
            <EditText
                android:id="@+id/etEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Будет весело!"
                android:layout_below="@+id/etEventOrganizer"
                android:layout_toEndOf="@+id/tvEventDescription"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventTimeMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Время сбора: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventDescription"
                />
            <EditText
                android:id="@+id/etEventTimeMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="15:00"
                android:inputType="time"
                android:layout_below="@+id/etEventDescription"
                android:layout_toEndOf="@+id/tvEventTimeMeeting"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Время старта: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventTimeMeeting"
                />
            <EditText
                android:id="@+id/etEventTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="15:30"
                android:inputType="time"
                android:layout_below="@+id/etEventTimeMeeting"
                android:layout_toEndOf="@+id/tvEventTimeStart"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventStartLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Старт: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventTimeStart"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etEventStartLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Васька"
                android:layout_below="@+id/etEventTimeStart"
                android:layout_toEndOf="@+id/tvEventStartLocation"
                android:padding="15dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvEventEndLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Финиш: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventStartLocation"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etEventEndLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Петроградка"
                android:layout_below="@+id/etEventStartLocation"
                android:layout_toEndOf="@+id/tvEventEndLocation"
                android:padding="15dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvEventSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скорость: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventEndLocation"
                />
            <EditText
                android:id="@+id/etEventSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="15 км/ч"
                android:layout_below="@+id/etEventEndLocation"
                android:layout_toEndOf="@+id/tvEventSpeed"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/tvEventDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дистанция: "
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:padding="15dp"
                android:layout_below="@+id/etEventSpeed"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etEventDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="25 км"
                android:layout_below="@+id/etEventSpeed"
                android:layout_toEndOf="@+id/tvEventDistance"
                android:padding="15dp"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/llRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEventDistance"
                android:orientation="vertical"
                android:gravity="center"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить маршрут"
                    app:cornerRadius="25dp"
                    android:padding="10dp"
                    android:layout_marginTop="25dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить мероприятие"
                    app:cornerRadius="25dp"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
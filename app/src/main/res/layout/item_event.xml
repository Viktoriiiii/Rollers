<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/for_popup_menu"
    android:layout_margin="3dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivEventPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/roliki" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="25dp"
                app:cardCornerRadius="25dp"
                android:layout_gravity="top|right"
                android:backgroundTint="@color/for_chat_my_message"
                android:background="@color/for_chat_my_message"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/txvEventCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_gravity="center"
                    android:text="Бесплатно"
                    android:textSize="8sp"
                    android:textColor="@color/for_button"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/ivManager"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_manage_account_foreground"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/txvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@color/for_button"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Покатушка на роликах"
                android:padding="2dp"
                android:paddingStart="20dp"
                android:layout_weight="10"
                android:gravity="left"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/ivEventStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_event_foreground"
                android:gravity="end"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/txvEventDateDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29"
                    android:textColor="@color/for_text"
                    android:textSize="24sp"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    />
                <TextView
                    android:id="@+id/txvEventDateMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="апреля"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/ivEventStartLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location_foreground"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/txvEventStartLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="г. Санкт-Петербург, Дворцовая площадь"
                        android:textColor="@color/for_text"
                        android:textSize="10sp"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:paddingStart="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/ivEventEndLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location_foreground"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/txvEventEndLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="г. Санкт-Петербург, ст.м. Крестовский остров"
                        android:textColor="@color/for_text"
                        android:textSize="10sp"
                        android:padding="2dp"
                        android:paddingStart="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/ivEventTime"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_time_foreground"
                        />
                    <TextView
                        android:id="@+id/txvEventDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="06:30"
                        android:layout_gravity="center"
                        android:textColor="@color/for_text"
                        android:textSize="10sp"
                        android:padding="2dp"
                        android:paddingStart="15dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
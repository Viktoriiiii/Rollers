<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oldscreens.EventAdding"
    android:background="@color/for_contacts"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/for_toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_back2_foreground"
            android:foreground="?android:attr/selectableItemBackground"
            />
        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавление события"
            android:textColor="@color/for_icon"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/imageButtonDeleteEvent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_delete_foreground"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Название"
                android:textColor="@color/for_text"
                android:paddingLeft="4dp"
                />
            <EditText
                android:id="@+id/txvEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="Прогулка на роликах"
                android:textSize="14sp"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Дата и время"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                />
            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="13/06/2023 18:00"
                android:inputType="datetime"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/tvEventOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Организатор"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                />
            <EditText
                android:id="@+id/etEventOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="Иван Иванов"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Описание"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                />
            <EditText
                android:id="@+id/etEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="Будет весело!"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/tvEventCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Стоимость"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                />
            <EditText
                android:id="@+id/etEventCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/tvEventStartLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Старт"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etEventStartLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="Васька"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:backgroundTint="@color/for_contacts"
                android:visibility="gone"/>
            <View
                android:id="@+id/vDividerEventStartLocation"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvEventEndLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Финиш"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etEventEndLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="Петроградка"
                android:backgroundTint="@color/for_contacts"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"/>
            <View
                android:id="@+id/vDividerEventEndLocation"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvEventSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Скорость"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                />
            <EditText
                android:id="@+id/etEventSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="15 км/ч"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/tvEventDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Дистанция"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingTop="15dp"
                android:paddingLeft="4dp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etEventDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="25 км"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:backgroundTint="@color/for_contacts"
                android:visibility="gone"/>
            <View
                android:id="@+id/vDividerEventDistance"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvEventPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Фото"
                android:paddingTop="15dp"
                android:textColor="@color/for_text"
                android:paddingLeft="4dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivEventPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/roliki"
                    android:layout_marginVertical="5dp"
                    />
                <ImageView
                    android:id="@+id/imageViewChangePhoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_photo_foreground"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/llRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="60dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Добавить маршрут"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="10dp"
                    android:padding="16dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/for_button"
                    android:layout_marginTop="25dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сохранить мероприятие"
                    app:cornerRadius="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/for_button"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/for_toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/for_toolbar"
            android:gravity="start"
            >
            <ImageButton
                android:id="@+id/imageButtonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back2_foreground"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@string/back"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>
        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_event"
            android:textColor="@color/for_icon"
            android:textSize="20sp"
            android:paddingHorizontal="10dp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/friendsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/for_contacts"
        app:cardCornerRadius="25dp"
        android:layout_margin="3dp"
        android:padding="10dp"
        app:strokeWidth="2dp"
        android:focusable="false"
        app:cardElevation="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="start"
                android:orientation="vertical"
                android:focusable="false"
                >
                    <TextView
                        android:id="@+id/tvEventName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="@color/for_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="@string/_event"
                        android:padding="10dp"
                        android:layout_weight="2"
                        />
                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_date_ant_time"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:padding="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvManager"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_manager"
                        android:textColor="@color/for_text"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />
                    <ImageButton
                        android:id="@+id/imageButtonViewManager"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_view_event_foreground"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/view"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_description"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:padding="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/tvEventCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:padding="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvEventNameRoute"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_route"
                        android:textColor="@color/for_text"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <ImageButton
                        android:id="@+id/imageButtonViewRoute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_view_event_foreground"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/view"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_speed_"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:padding="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/tvEventDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_distance_"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:padding="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"
                    android:layout_marginHorizontal="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txvEventParticipants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/participants"
                        android:textColor="@color/for_text"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />
                    <ImageButton
                        android:id="@+id/ibViewParticipants"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_view_event_foreground"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/view"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
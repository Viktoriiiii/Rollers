<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/for_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <ImageView
            android:id="@+id/imageButtonBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back2_foreground"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="@string/back"
            tools:ignore="UnusedAttribute" />
        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_event"
            android:textSize="20sp"
            android:paddingHorizontal="10dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/friendsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="3dp"
        app:cardElevation="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical"
                android:focusable="false">
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/_event"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_date_ant_time"
                    android:paddingVertical="12dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/tvManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_manager"
                    android:paddingVertical="12dp"
                    app:drawableRightCompat="@drawable/ic_preview" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_description"
                    android:paddingVertical="12dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/tvEventCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:paddingVertical="12dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/tvEventNameRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_route"
                    android:paddingVertical="12dp"                    app:drawableRightCompat="@drawable/ic_preview"
                    android:layout_gravity="center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_speed_"
                    android:paddingVertical="12dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/tvEventDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_distance_"
                    android:paddingVertical="12dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon" />
                <TextView
                    android:id="@+id/txvEventParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/participants"
                    android:paddingVertical="12dp"
                    app:drawableRightCompat="@drawable/ic_preview" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/for_contacts"
    app:cardCornerRadius="25dp"
    android:layout_margin="3dp"
    android:padding="10dp"
    app:strokeWidth="2dp"
    app:cardElevation="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPhoto"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    app:cardCornerRadius="130dp"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/freestyle"
                        android:contentDescription="@string/user_photo" />
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/imageViewClose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_close_foreground"
                    android:focusable="true"
                    android:scaleType="center"
                    android:layout_gravity="end"
                    android:focusedByDefault="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/close"
                    tools:ignore="UnusedAttribute" />
                <ImageView
                    android:id="@+id/imageViewToAdmin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_manage_account_foreground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/user_photo"
                    tools:ignore="UnusedAttribute" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="5dp"
                >
                <TextView
                    android:id="@+id/txvSchoolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/_name_school"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/imageViewEventDescription"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_event_description_foreground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/description"
                    tools:ignore="UnusedAttribute" />
                <TextView
                    android:id="@+id/txvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_description"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/imageViewEventAddress"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location_foreground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/location"
                    tools:ignore="UnusedAttribute" />
                <TextView
                    android:id="@+id/txvSchoolAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_address"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/imageViewEventPhone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_phone_foreground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/phone"
                    tools:ignore="UnusedAttribute" />
                <TextView
                    android:id="@+id/txvSchoolPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_phone"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>

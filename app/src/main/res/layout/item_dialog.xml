<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/for_popup_menu"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="5dp"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:contentDescription="@string/user_photo" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/mtvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/for_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/full_name"
            android:layout_toEndOf="@+id/cvPhoto"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/mtvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_message"
            android:textColor="@color/for_text"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/cvPhoto"
            android:layout_below="@+id/mtvName"
            android:padding="5dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCountMessages"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|end"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignEnd="@+id/mtvName"
            android:background="@color/main_background"
            android:backgroundTint="@color/main_background"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/txvContMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/for_button"
                android:textSize="12sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

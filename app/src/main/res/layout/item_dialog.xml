<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/for_popup_menu"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="5dp"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/for_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Иван Иванов"
            android:layout_toEndOf="@+id/cvPhoto"
            android:padding="5dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст сообщения..."
            android:textColor="@color/for_text"
            android:textSize="16sp"
            android:textStyle="normal|italic"
            android:layout_toEndOf="@+id/cvPhoto"
            android:layout_below="@+id/mtvName"
            android:padding="5dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="6 марта 2023 21:05"
            android:textAlignment="textEnd"
            android:textColor="@color/for_text"
            android:textSize="11sp"
            android:textStyle="normal|italic"
            android:padding="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="50dp"
            android:backgroundTint="@color/main_background"
            android:background="@color/main_background"
            android:layout_margin="5dp"
            android:layout_below="@+id/mtvDate"
            android:layout_gravity="top|left"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/txvContMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_gravity="center"
                android:text="2"
                android:textSize="12sp"
                android:textColor="@color/for_button"
                android:textAlignment="center"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

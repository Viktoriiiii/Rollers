<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/for_contacts"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="60dp"
    android:orientation="vertical">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/for_toolbar"
                android:elevation="4dp"
                app:titleTextColor="@color/for_icon"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:id="@+id/imageViewPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="События"
                    android:textColor="@color/for_icon"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/ivWeather"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/white"
                    android:layout_gravity="start|center"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/txvWeatherTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/for_icon"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlAddEvent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/for_toolbar"
                    android:layout_gravity="right"
                    android:layout_marginEnd="20dp"
                    >
                    <ImageView
                        android:id="@+id/imageButtonAddEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/for_toolbar"
                        android:src="@drawable/ic_add_event_foreground"
                        android:foreground="?android:attr/selectableItemBackground"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    >
                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/search_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:iconifiedByDefault="false"
                        android:queryHint="Поиск..."/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/eventsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:spanCount="2"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    />
            </FrameLayout>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
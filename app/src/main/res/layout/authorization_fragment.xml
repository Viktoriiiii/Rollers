<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:gravity="center"
    tools:context=".screens.Authorization">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtvAuthorization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Авторизация"
                android:textColor="@color/for_text"
                android:padding="16dp"
                android:textSize="34sp"/>
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/mavLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="Введите логин"
                android:padding="16dp"/>
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/mavPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="Введите пароль"
                android:padding="16dp"/>
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="25dp"
                android:id="@+id/mbLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войти"
                android:backgroundTint="@color/for_button"
                android:padding="16dp"/>
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="25dp"
                android:id="@+id/mbRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться"
                android:backgroundTint="@color/for_button"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
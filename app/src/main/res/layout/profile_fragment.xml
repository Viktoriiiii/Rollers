<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/for_contacts"
    android:orientation="vertical"
    android:paddingBottom="60dp"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/for_toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPhotoToolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/imageViewPhotoToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/for_icon"
            android:textSize="20sp"
            android:paddingHorizontal="10dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/for_toolbar"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:id="@+id/imageViewExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/for_toolbar"
                android:src="@drawable/ic_exit_foreground"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@string/exit"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPhoto"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"
                        android:contentDescription="@string/user_photo" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txvSchoolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_school"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/_name_school"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="name school"
                    android:inputType="textMultiLine" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvSchoolDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etSchoolDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/_description"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="school description"
                    android:inputType="textMultiLine" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvSchoolAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etSchoolAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/_address"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="school address"
                    android:inputType="textMultiLine" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/_name"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="first name"
                    android:inputType="textPersonName" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/_last_name"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="last name"
                    android:inputType="textPersonName" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/status"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/for_text"
                    android:theme="@style/SwitchStatus"
                    android:hint="@string/inactive"
                    android:paddingHorizontal="4dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/district"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:hint="@string/_district"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="district"
                    android:inputType="textMultiLine" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/birthday"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:hint="@string/_birthday"
                    android:inputType="date"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="birthday" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/gender"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:hint="@string/gender_female"
                    android:inputType="textMultiLine"
                    android:backgroundTint="@color/for_contacts"
                    android:autofillHints="birthday" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingHorizontal="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="@string/_phone"
                android:inputType="phone"
                android:backgroundTint="@color/for_contacts"
                android:autofillHints="phone" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/txvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingHorizontal="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/user_mail_ru"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/for_contacts"
                android:autofillHints="emailAddress" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/txvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/pass"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingHorizontal="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/for_text"
                android:hint="@string/input_pass"
                android:inputType="textPassword"
                android:backgroundTint="@color/for_contacts"
                android:autofillHints="password" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveChanges"
                    app:cornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saveChanges"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/for_button"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="1dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

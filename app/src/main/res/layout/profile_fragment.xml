            </LinearLayout>
            <TextView
                android:id="@+id/txvPublicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Public name"
                android:textColor="@color/for_text"
                android:paddingLeft="4dp"
                android:paddingTop="15dp"
                />
            <EditText
                android:id="@+id/etPublicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="fantast"
                android:textSize="14sp"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <LinearLayout
                android:id="@+id/llSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txvSchoolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Название школы"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Роллер-школа Фантаст"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvSchoolDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Описание"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etSchoolDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Обучение катанию на роликах детей и взрослых: свой роллердром / скейт-парк, опытные инструкторы по роликам, доступные цены."
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvSchoolAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Адрес"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etSchoolAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Адрес: просп. Юрия Гагарина, 32, корп. 6Б (этаж 4)"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/llUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Имя"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Юлия"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Фамилия"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Иванова"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Статус"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/for_text"
                    android:theme="@style/SwitchStatus"
                    android:hint="Не активен"
                    android:paddingLeft="4dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Район"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:hint="Московский"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Дата рождения"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="14sp"
                    android:hint="28/05/2023"
                    android:inputType="date"
                    android:backgroundTint="@color/for_contacts"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
                <TextView
                    android:id="@+id/txvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Пол"
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/for_text"
                    android:theme="@style/SwitchGender"
                    android:hint="Женский"
                    android:paddingLeft="4dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/for_icon"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Телефон"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:hint="+7 911 999 99 99"
                android:inputType="phone"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/txvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Почта"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Электронная почта"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/txvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Логин"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="login"
                android:textColor="@color/for_text"
                android:textSize="14sp"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <TextView
                android:id="@+id/txvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:textSize="16sp"
                android:textColor="@color/for_text"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                />
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/for_text"
                android:hint="password"
                android:inputType="textPassword"
                android:backgroundTint="@color/for_contacts"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/for_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPassword"
                android:gravity="center"
                android:paddingTop="30dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveChanges"
                    app:cornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сохранить изменения"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/for_button"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="1dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

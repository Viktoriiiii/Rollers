        android:background="@color/for_toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPhotoToolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/imageViewPhotoToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:textColor="@color/for_icon"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/for_toolbar"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:id="@+id/imageViewExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/for_toolbar"
                android:src="@drawable/ic_exit_foreground"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

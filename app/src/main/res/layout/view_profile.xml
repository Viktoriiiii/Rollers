<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friendsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/for_contacts"
    app:cardCornerRadius="25dp"
    android:layout_margin="3dp"
    android:padding="10dp"
    app:strokeWidth="2dp"
    app:cardElevation="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPhoto"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    app:cardCornerRadius="130dp"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:id="@+id/imageViewPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar" />
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/imageViewClose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_close_foreground"
                    android:focusable="true"
                    android:scaleType="center"
                    android:layout_gravity="end"
                    android:focusedByDefault="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Иван Иванов (nickname)"
                    android:padding="15dp"
                    />
                <ImageView
                    android:id="@+id/imageViewToAdmin"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_manage_account_foreground"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="На роликах"
                    android:textColor="@color/for_text"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:padding="15dp"
                    />
                <ImageView
                    android:id="@+id/imageViewStatus"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rollers_foreground"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txvBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 лет"
                android:textColor="@color/for_text"
                android:textSize="18sp"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/txvDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Московский"
                android:textColor="@color/for_text"
                android:textSize="18sp"
                android:padding="15dp"
                />
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>

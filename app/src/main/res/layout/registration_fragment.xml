<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".screens.Registration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sivLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtvRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:textColor="@color/for_text"
                android:padding="16dp"
                android:textSize="34sp"/>
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/mavLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="Введите логин"
                android:padding="16dp"/>
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/mavPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="Введите пароль"
                android:padding="16dp"/>
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/mavPasswordAdmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:hint="Подтвердите пароль"
                android:layout_marginBottom="45dp"
                android:padding="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/txvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пол: "
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingTop="25dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/for_text"
                    android:theme="@style/SwitchGender"
                    android:text="Женский"
                    android:paddingTop="25dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Имя"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingTop="30dp"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Фамилия"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:paddingTop="30dp"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Район"
                android:paddingTop="22dp"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="Дата рождения"
                android:inputType="date"
                android:paddingTop="22dp"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/txvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус: "
                    android:textColor="@color/for_text"
                    android:textSize="16sp"
                    android:paddingTop="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="8dp"
                    android:visibility="gone"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/for_text"
                    android:theme="@style/SwitchStatus"
                    android:text="Не активен"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/etNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/for_text"
                android:textSize="16sp"
                android:hint="nickname"
                android:paddingTop="15dp"
                android:visibility="gone"
                />
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="25dp"
                android:id="@+id/mbRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться"
                android:backgroundTint="@color/for_button"
                android:padding="16dp"/>
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="25dp"
                android:id="@+id/mbBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:backgroundTint="@color/for_button"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
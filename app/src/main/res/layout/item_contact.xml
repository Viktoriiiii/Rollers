<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friendsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp"
    android:layout_margin="3dp"
    android:padding="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/white"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="5dp"
        android:background="@color/for_friends">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPhoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/imageViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/for_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Иван Иванов"
            android:layout_toEndOf="@+id/cardViewPhoto"
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="На роликах"
            android:textColor="@color/for_text"
            android:textSize="16sp"
            android:textStyle="normal|italic"
            android:layout_toEndOf="@+id/cardViewPhoto"
            android:layout_below="@+id/textViewName"
            android:padding="15dp"
            />

        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rollers_foreground"
            android:layout_toEndOf="@+id/textViewStatus"
            android:paddingTop="45dp"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
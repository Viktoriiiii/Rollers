<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authorization">

    <fragment
        android:id="@+id/authorization"
        android:name="ru.spb.rollers.screens.Authorization"
        android:label="fragment_authorization_screen"
        tools:layout="@layout/fragment_authorization" >
        <action
            android:id="@+id/action_authorization_to_registration"
            app:destination="@id/registration" />
        <action
            android:id="@+id/action_authorization_to_homePage"
            app:destination="@id/homePage" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="ru.spb.rollers.screens.Registration"
        android:label="fragment_registration_screen"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registration_to_authorization"
            app:destination="@id/authorization" />
        <action
            android:id="@+id/action_registration_to_homePage"
            app:destination="@id/homePage" />
    </fragment>
    <fragment
        android:id="@+id/homePage"
        android:name="ru.spb.rollers.screens.HomePage"
        android:label="HomePage" >
        <action
            android:id="@+id/action_homePage_to_authorization"
            app:destination="@id/authorization" />
        <action
            android:id="@+id/action_homePage_to_messages"
            app:destination="@id/messages" />
        <action
            android:id="@+id/action_homePage_to_profile2"
            app:destination="@id/profile2" />
        <action
            android:id="@+id/action_homePage_to_contacts"
            app:destination="@id/contacts" />
    </fragment>
    <fragment
        android:id="@+id/messages"
        android:name="ru.spb.rollers.screens.Messages"
        android:label="Messages" >
        <action
            android:id="@+id/action_messages_to_homePage"
            app:destination="@id/homePage" />
        <action
            android:id="@+id/action_messages_to_contacts"
            app:destination="@id/contacts" />
        <action
            android:id="@+id/action_messages_to_contactSearch"
            app:destination="@id/contactSearch" />
    </fragment>
    <fragment
        android:id="@+id/profile2"
        android:name="ru.spb.rollers.screens.Profile"
        android:label="Profile" >
        <action
            android:id="@+id/action_profile2_to_homePage"
            app:destination="@id/homePage" />
    </fragment>
    <fragment
        android:id="@+id/contacts"
        android:name="ru.spb.rollers.screens.Contacts"
        android:label="Contacts" >
        <action
            android:id="@+id/action_contacts_to_homePage"
            app:destination="@id/homePage" />
        <action
            android:id="@+id/action_contacts_to_messages"
            app:destination="@id/messages" />
        <action
            android:id="@+id/action_contacts_to_contactSearch"
            app:destination="@id/contactSearch" />
    </fragment>
    <fragment
        android:id="@+id/contactSearch"
        android:name="ru.spb.rollers.screens.ContactSearch"
        android:label="fragment_contact_search"
        tools:layout="@layout/fragment_contact_search" >
        <action
            android:id="@+id/action_contactSearch_to_contacts"
            app:destination="@id/contacts" />
        <action
            android:id="@+id/action_contactSearch_to_messages"
            app:destination="@id/messages" />
    </fragment>
</navigation>